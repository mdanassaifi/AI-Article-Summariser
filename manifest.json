{
    "manifest_version": 3,
    "name": "AI Article Summariser",
    "version": 1.0,
    

    "permission": ["scripting", "activeTab", "storage" ],

     "action":{
        "default_popup": "popup.html",
        "default_icon": "icon.png"
     },
            
      "contant_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
      ],

    
      "background":{
        "service_worker": "background.js",
        },

        "options_page": "options.html",

        "host_permissions":["<all_urls>"]
}
     


